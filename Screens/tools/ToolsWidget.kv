<ToolsWidget>:
    size_hint:1,None
    size:1,dp(50)
    padding:dp(10)
    obj:None
    BoxLayout:
        canvas:
            Color:
                rgb:background_bar
            RoundedRectangle:
                #source: 'mylogo.png'
                pos: self.pos
                size: self.size
                radius:[dp(15)]*4
        FloatLayout:
            MDIconButton:
                icon:'plus'
                theme_text_color:'Custom'
                text_color:buttons_color
                pos_hint:{'right':1,'center_y':.5}
                on_release:
                    root.font_size_plus()

            MDIconButton:
                icon:'minus'
                theme_text_color:'Custom'
                text_color:buttons_color
                pos_hint:{'right':.9,'center_y':.5}
                on_release:
                    root.font_size_minus()

<ToolsWidgetButton@Button>:
    size_hint:None,None
    size:dp(10),dp(31)
    font_size:dp(13)
    background_color:0,0,0,0

<ToolsWidget2>:
    size_hint:1,None
    size:1,dp(50)
    padding:dp(10)
    code_input:None
    BoxLayout:
        canvas:
            Color:
                rgb:background_bar
            RoundedRectangle:
                #source: 'mylogo.png'
                pos: self.pos
                size: self.size
                radius:[dp(15)]*4
        FloatLayout:

            MDIconButton:
                icon:'keyboard-tab'
                theme_text_color:'Custom'
                text_color:buttons_color
                pos_hint:{'center_x':.5,'center_y':.5}
                on_release:
                    root.tab()

            BoxLayout:
                canvas:
                    Color:
                        rgb:hex('000000')
                    RoundedRectangle:
                        #source: 'mylogo.png'
                        pos: self.pos
                        size: self.size
                        radius:[dp(15)]*4
                size_hint:None,1
                size:dp(150),1
                spacing:dp(1)
                pos_hint:{'left':1,'center_y':.5}

                FloatLayout:
                    ToolsWidgetButton:
                        text:'" "'
                        color:buttons_color
                        pos_hint:{'center_x':.85,'center_y':.5}
                        on_release:
                            root._text(root.code_input.cursor)

                    ToolsWidgetButton:
                        text:'( )'
                        color:buttons_color
                        pos_hint:{'center_x':.6,'center_y':.5}
                        on_release:
                            root._grup(root.code_input.cursor)

                    ToolsWidgetButton:
                        text:'{ }'
                        color:buttons_color
                        pos_hint:{'center_x':.35,'center_y':.5}
                        on_release:
                            root._dict(root.code_input.cursor)

                    ToolsWidgetButton:
                        text:'[ ]'
                        color:buttons_color
                        pos_hint:{'center_x':.15,'center_y':.5}
                        on_release:
                            root._list(root.code_input.cursor)
